{
    "name": "cap-hydro-vj",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "express": "^4",
        "@sap/xssec": "^3",
        "passport": "^0",
        "hdb": "^0.19.0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.100.3",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run",
        "watch-manage-books": "cds watch --open manage-books/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy cap-hydro-vj --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "auth": {
                "kind": "basic-auth",
                "users": {
                    "test1": {
                        "password": "password",
                        "roles": [
                            "book-admin"
                        ]
                    }
                }
            },
            "[production]": {
                "auth": {
                    "kind": "xsuaa"
                },
                "approuter": {
                    "kind": "cloudfoundry"
                }
            },
            "db": {
                "kind": "hana-cloud"
            },
            "API_BUSINESS_PARTNER": {
                "kind": "odata-v2",
                "model": "srv/external/API_BUSINESS_PARTNER",
                "[production]": {
                    "credentials": {
                        "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER/",
                        "destination": "s4_sandbox"
                    }
                },
                "credentials": {
                    "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
                }
            }
        }
    },
    "sapux": [
        "app/manage-books"
    ]
}